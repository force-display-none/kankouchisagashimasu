          <%= render 'share' %>
          <div class="spot-show-header-box">
            <% if user_signed_in? %>
            <small style="opacity: 0;"><%= fa_icon("exclamation-triangle") %>行った/行きたいの利用には<%= link_to "ログイン", new_user_session_path,"data-confirm" => "ログインページに移動します", class: "red red--bgLeft", :style=>"color:red;" %>が必要です)</small>
            <% else %>
            <small><%= fa_icon("exclamation-triangle") %>行った/行きたいの利用には<%= link_to "ログイン", new_user_session_path, class: "red red--bgLeft", :style=>"color:red;" %>が必要です)</small>
            <% end %>
            <div class="spot-show-tags-box">
              <% @spot.tag_list.each do |tag| %>
                <span class="label label-primary tag"><%= tag %></span>
              <% end %>
            </div>
            <div class="spot-show-spot-like-want-went-box">
              <span id="went-want"><%= render 'want_went' %></span>
              <%= render 'like' %>
            </div>
          </div>
          <h1 class="spot-headline">
            <%= @spot.name %>
          </h1>

        </div>
        <!-- <div class="col-sm-4"></div> -->
      </div>
        <div class="row">
          <div class="col-sm-8">

            <% if @spot.spot_images.exists? %>

<div class="relative">
              <div class="wrapper">
  <div class="cut_t"></div>
  <div class="card"><%= attachment_image_tag @image, :image, :fill, 600, 600, :style=>"position: absolute; top: 50%; left: 50%;transform: translate(-50%, -50%);" %></div>
  <div class="cut_b"></div>
</div>
</div>

