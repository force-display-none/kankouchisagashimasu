    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <span>
            <%= link_to "全国", root_path, class: "blue blue--bgLeft" %>→ 地域:
          </span>
          <%= link_to "#{@spot.area.prefecture.region.name}", regions_path(@spot, id: @spot.area.prefecture.region.id), class: "blue blue--bgLeft" %>→ 都道府県名:
          <%= link_to "#{@spot.area.prefecture.name}", areas_path(@spot, id: @spot.area.prefecture.id), class: "blue blue--bgLeft" %>→ エリア:
          <%= link_to "#{@spot.area.name}", area_path(@spot.area), class: "blue blue--bgLeft" %>
          <br>
          <span>ジャンル → </span>
          <span style="color: #FF8C00"><%= @spot.s_spot_genre.l_spot_genre.name %></span>→
          <span style="color: #FF8C00"><%= @spot.s_spot_genre.name %></span>
