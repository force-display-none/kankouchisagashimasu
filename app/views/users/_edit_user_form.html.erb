<div class="field">
  <%= f.label :名前 %><br />
  <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
</div>

<div class="field">
  <%= f.label :ニックネーム %><br />
  <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
</div>

<div class="field">
  <%= f.label :性別 %><br />
  <%= f.select :gender, User.genders.keys.to_a, {include_blank: true} %>
</div>

<div class="field">
  <%= f.label :年代 %><br />
  <%= f.select :age, User.ages.keys.to_a, {include_blank: true} %>
</div>

<div class="field">
  <%= f.label :メールアドレス %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<div class="actions">
  <%= f.submit "上記の内容で更新する" %>
</div>