<% provide(:title, "新規会員登録") %>
<div class="back-image">
  <div class="back-image-mask">
    <div class="form">
      <h3>会員登録フォーム</h3>
      <div class="auth-box">
        <%= link_to user_facebook_omniauth_authorize_path, class: "fl_fb2" do %>
        <span class="auth">
          <%= fa_icon("facebook") %> Facebookで認証
        </span>
        <% end %>
      </div>
      <div class="auth-box">
        <%= link_to user_twitter_omniauth_authorize_path, class: "fl_tw2" do %>
        <span class="auth">
          <%= fa_icon("twitter") %> Twitterで認証
        </span>
        <% end %>
      </div>
      <!-- User新規登録form_for -->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="error">
        <%= devise_error_messages %>
      </div>
      <div class="field">
        <%= f.label :名前 %>(Name)
        <br />
        <%= f.text_field :name, autofocus: true, placeholder:"\uf007 名前(2〜20文字)", class: "form-control fa"  %>
      </div>
      <div class="field">
        <%= f.label :ニックネーム %>(Nickname)
        <br />
        <%= f.text_field :nickname, autofocus: true, placeholder:"\uf006 ニックネーム(2〜20文字)", class: "form-control fa" %>
      </div>
      <div class="field">
        <%= f.label :性別 %>(Gender)
        <br />
        <%= f.select :gender, User.genders.keys.to_a, :prompt => "性別を選択してください" %>
      </div>
      <div class="field">
        <%= f.label :年代 %>(Age)
        <br />
        <%= f.select :age, User.ages.keys.to_a, :prompt => "年代を選択してください" %>
      </div>
      <div class="field">
        <%= f.label :メールアドレス %>(Email)
        <br />
        <%= f.email_field :email, autofocus: true, placeholder:"\uf0e0 メールアドレス", class: "form-control fa" %>
      </div>

      <% if f.object.provider.blank? %>

      <div class="field">
        <%= f.label :パスワード %>(Password)
        <% if @minimum_password_length %>
        <em>(
          <%= @minimum_password_length %>文字以上)
        </em>
        <% end %>
        <br />
        <%= f.password_field :password, placeholder:"\uf023 パスワード(半角英数6字以上)", class: "form-control fa" %>
      </div>
      <div class="field">
        <%= f.label :パスワード確認 %>(Confirmation)
        <br />
        <%= f.password_field :password_confirmation, placeholder:"\uf058 確認用パスワード", class: "form-control fa" %>
      </div>

      <% end %>

      <div class="actions">
        <br />
        <%= f.submit "上記の内容で新規登録する", class: "sign_up_submit" %>
      </div>
      <br />
      <br>
      <% end %>
      <!-- form_for -->
      <%= render "devise/shared/links" %>
      <p>
        <small>
          <%= link_to "\uf071 登録せずに利用する", root_path, class: "hover fa" %>
        </small>
      </p>
    </div><!-- form -->
  </div><!-- back-image-mask -->
</div><!-- back-image -->