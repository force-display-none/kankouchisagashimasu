<% provide(:title, "ログイン") %>
<div class="back-image">
  <div class="back-image-mask">
    <div class="form">
      <h3>ログイン</h3>
      <div class="auth-box">
        <%= link_to user_facebook_omniauth_authorize_path, class: "fl_fb2" do %>
        <span class="auth">
          <%= fa_icon("facebook") %> Facebookで認証
        </span>
        <% end %>
      </div>
      <div class="auth-box">
        <%= link_to user_twitter_omniauth_authorize_path, class: "fl_tw2" do %>
        <span class="auth">
          <%= fa_icon("twitter") %> Twitterで認証
        </span>
        <% end %>
      </div>
      <!-- ログインform_for -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :メールアドレス %>(Email)
        <br />
        <%= f.email_field :email, autofocus: true, placeholder:"\uf0e0 登録したメールアドレス", class: "form-control fa" %>
      </div>
      <div class="field">
        <%= f.label :パスワード %>(Password)
        <% if @minimum_password_length %>
        <em>(
          <%= @minimum_password_length %>文字以上)
        </em>
        <% end %>
        <br />
        <%= f.password_field :password, placeholder:"\uf023 登録したパスワード", class: "form-control fa" %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :ログイン状態を保存する %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "ログイン", class: "sign_up_submit" %>
      </div>
      <% end %><!-- form_for -->
      <%= render "devise/shared/links" %>
      <%= link_to "\uf071 ログインせずに利用する", root_path, class: "hover fa" %><br />
    </div><!-- form -->
  </div><!-- back-image-mask -->
</div><!-- back-image -->